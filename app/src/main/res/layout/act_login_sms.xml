<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:orientation="vertical">

        <TextView
            android:id="@+id/login_register"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:gravity="center"
            android:onClick="onAction"
            android:paddingLeft="26dp"
            android:paddingRight="17dp"
            android:text="注册"
            android:textColor="@color/color666666"
            android:textSize="@dimen/text_size_15" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="20dp"
            android:text="手机号登录"
            android:textColor="@color/color333333"
            android:textSize="@dimen/text_size_27"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="10dp"
            android:text="登录优享更多服务"
            android:textColor="@color/color999999"
            android:textSize="@dimen/text_size_13"
            android:textStyle="normal" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/login_phone"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_weight="1.0"
                    android:background="@color/transparent"
                    android:hint="输入手机号"
                    android:inputType="phone"
                    android:text=""
                    android:textColor="@color/color666666"
                    android:textColorHint="@color/colorcccccc"
                    android:textSize="@dimen/text_size_17" />

                <ImageView
                    android:id="@+id/login_phone_del"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingLeft="16dp"
                    android:paddingRight="5dp"
                    android:src="@drawable/del_edit_icon"
                    android:visibility="invisible" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_05"
                android:background="@color/colore6e6e6" />


        </LinearLayout>


        <TextView
            android:id="@+id/login_sms_send"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="42dp"
            android:layout_marginTop="84dp"
            android:layout_marginRight="43dp"
            android:background="@drawable/btn_login_r2_bg"
            android:gravity="center"
            android:onClick="onAction"
            android:text="发送验证码"
            android:textColor="@color/colorefffefe"
            android:textSize="@dimen/text_size_17"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="42dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="43dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/login_sms"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableRight="@drawable/ico_arrow_right"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:onClick="onAction"
                android:text="账号密码登录"
                android:textColor="@color/color666666"
                android:textSize="@dimen/text_size_13" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:layout_width="50dp"
                android:layout_height="@dimen/line_05"
                android:background="@color/line_c3c3c3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="其他登录方式"
                android:textColor="@color/color666666"
                android:textSize="@dimen/text_size_12" />

            <View
                android:layout_width="50dp"
                android:layout_height="@dimen/line_05"
                android:background="@color/line_c3c3c3" />
        </LinearLayout>

        <ImageView
            android:id="@+id/login_wx_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:onClick="onAction"
            android:paddingLeft="25dp"
            android:paddingTop="23dp"
            android:paddingRight="25dp"
            android:paddingBottom="36dp"
            android:src="@drawable/login_wechat" />


    </LinearLayout>
</LinearLayout>