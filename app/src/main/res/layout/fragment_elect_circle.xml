<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <View
        android:id="@+id/fake_status_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/elect_circle_top_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/elect_down_icon"
            android:drawablePadding="11dp"
            android:gravity="center_vertical|left"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="素材库"
            android:textColor="@color/FF333333"
            android:textSize="@dimen/text_size_17"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0" />

        <TextView
            android:id="@+id/elect_circle_top_share"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:paddingLeft="15dp"
            android:paddingRight="5dp"
            android:text="邀好友互推"
            android:textColor="@color/FF333333"
            android:textSize="@dimen/text_size_13" />

        <ImageView
            android:id="@+id/elect_circle_top_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:src="@drawable/elect_regulation_icon" />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/elect_bg">

        <ImageView
            android:id="@+id/elect_circle_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/elect_bg" />

        <ImageView
            android:id="@+id/elect_circle_bg_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/elect_bg_line" />

        <ImageView
            android:id="@+id/elect_circle_bg_line_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/elect_bg_line" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/elect_circle_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:paddingLeft="15dp"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_15" />


                <TextView
                    android:id="@+id/elect_circle_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@color/transparent"
                    android:checked="true"
                    android:drawableLeft="@drawable/elect_true_icon"
                    android:drawablePadding="11dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="20dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="20dp"
                    android:text="允许匹配"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_11" />

            </LinearLayout>


            <com.huimaibao.app.fragment.electcircle.view.TagCloudView
                android:id="@+id/elect_circle_tag_cloud"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1.0"
                app:autoScrollMode="uniform"
                app:radiusPercent="0.72"
                app:scrollSpeed="2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="摇一摇换一批"
                    android:textColor="#d5d5d5"
                    android:textSize="@dimen/text_size_11" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:text="匹配成功、互相分享、完成互推"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="33dp"
                android:layout_marginBottom="27dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/elect_circle_bottom_left"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="16dp"
                    android:layout_weight="1.0"
                    android:background="@drawable/btn_elect_line_r50_bg"
                    android:gravity="center"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="分享记录"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_13" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="30dp"
                    android:layout_weight="1.0"
                    android:background="@drawable/btn_elect_line_r50_bg"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/elect_circle_bottom_right_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="分享任务"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_13" />

                    <TextView
                        android:id="@+id/elect_circle_bottom_right_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="6dp"
                        android:layout_toRightOf="@+id/elect_circle_bottom_right_1"
                        android:background="@drawable/btn_red_r50_bg"
                        android:paddingLeft="5dp"
                        android:paddingTop="2dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="2dp"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_8"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/elect_circle_bottom_right"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/elect_circle_lib_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent5"
            android:focusable="true"
            android:orientation="vertical"
            android:visibility="gone">


            <LinearLayout

                android:layout_width="156dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="@drawable/btn_hui_w_r4_bg"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/elect_circle_lib_sc"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:drawableLeft="@drawable/elect_wz_icon"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="互推素材"
                    android:textColor="@color/color000000"
                    android:textSize="@dimen/text_size_14" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.0dp"
                    android:background="@color/line_eaeaea" />

                <TextView
                    android:id="@+id/elect_circle_lib_addr"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:drawableLeft="@drawable/elect_addr_icon"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="推广区域"
                    android:textColor="@color/color000000"
                    android:textSize="@dimen/text_size_14" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
