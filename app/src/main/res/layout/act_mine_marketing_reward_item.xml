<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/marketing_reward_item_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:orientation="horizontal"
                android:paddingRight="5dp">

                <TextView
                    android:id="@+id/marketing_reward_item_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:singleLine="true"
                    android:text="邀请好友"
                    android:textColor="@color/color010101"
                    android:textSize="@dimen/text_size_15" />

                <TextView
                    android:id="@+id/marketing_reward_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:singleLine="true"
                    android:text="**"
                    android:textColor="@color/FF274FF3"
                    android:textSize="@dimen/text_size_15" />
            </LinearLayout>


            <TextView
                android:id="@+id/marketing_reward_item_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:gravity="right"
                android:text="+ 400.00"
                android:textColor="@color/color010101"
                android:textSize="@dimen/text_size_11" />
        </LinearLayout>

        <TextView
            android:id="@+id/marketing_reward_item_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_weight="1"
            android:text="2018-12-17"
            android:textColor="@color/color777777"
            android:textSize="@dimen/text_size_11" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_05"
        android:layout_marginTop="10dp"
        android:background="@color/line_eaeaea" />

</LinearLayout>

