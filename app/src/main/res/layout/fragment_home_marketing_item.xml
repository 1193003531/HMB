<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@drawable/btn_duf"
    android:paddingLeft="15dp"
    android:paddingTop="8dp"
    android:paddingRight="15dp"
    android:paddingBottom="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/f_h_w_item_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/marketing_web_1_icon"
            android:visibility="visible" />

        <TextView
            android:id="@+id/f_h_w_item_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/color555555"
            android:textSize="@dimen/text_size_16" />

    </RelativeLayout>

    <com.youth.xframe.widget.RoundedImagView
        android:id="@+id/f_h_w_item_image"
        android:layout_width="120dp"
        android:layout_height="67dp"
        android:layout_marginLeft="15dp"
        android:visibility="gone"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_default" />
    <com.youth.xframe.widget.CircleImageView
        android:id="@+id/f_h_w_item_head_image"
        android:layout_marginLeft="15dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_default"
        app:civ_border_width="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/f_h_w_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="JSMO智能产品个人网页JSMO智能产品个人网页"
            android:textColor="@color/color010101"
            android:visibility="gone"
            android:textSize="@dimen/text_size_14"
            android:textStyle="" />
        <TextView
            android:id="@+id/f_h_w_item_head_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:text="桥东波"
            android:textColor="@color/FF333333"
            android:textSize="@dimen/text_size_15" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/f_h_w_item_browse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="5212 浏览量"
                android:textColor="@color/color999999"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/f_h_w_item_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="641感兴趣"
                android:textColor="@color/color999999"
                android:textSize="@dimen/text_size_12" />

        </LinearLayout>



    </LinearLayout>


</LinearLayout>

