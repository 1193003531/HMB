<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120dp"
    android:layout_height="70dp"
    android:minHeight="70dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/card_list_top_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/card_1_view"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <com.youth.xframe.widget.RoundedImagView
                android:id="@+id/card_list_top_head"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_default"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/card_list_top_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="姓名"
                    android:textColor="@color/color000000"
                    android:textSize="@dimen/text_size_6" />

                <TextView
                    android:id="@+id/card_list_top_jobs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="职位"
                    android:textColor="@color/FF333333"
                    android:textSize="@dimen/text_size_4" />
            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/card_list_top_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="公司"
            android:textColor="@color/FF333333"
            android:textSize="@dimen/text_size_4" />

        <TextView
            android:id="@+id/card_list_top_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="电话："
            android:textColor="@color/FF333333"
            android:textSize="@dimen/text_size_4" />

        <TextView
            android:id="@+id/card_list_top_wechat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="微信："
            android:textColor="@color/FF333333"
            android:textSize="@dimen/text_size_4" />

        <TextView
            android:id="@+id/card_list_top_addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="地址："
            android:textColor="@color/FF333333"
            android:textSize="@dimen/text_size_4" />
    </LinearLayout>

</LinearLayout>