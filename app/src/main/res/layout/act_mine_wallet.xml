<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/efeff4"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:background="@drawable/wallet_top_bg"
            android:orientation="vertical"
            android:paddingLeft="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="103dp"
                android:text="账户余额(元)"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_13" />

            <TextView
                android:id="@+id/mine_wallet_top_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="36sp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:id="@+id/fake_status_bar"
                android:layout_width="match_parent"
                android:layout_height="0dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/transparent"
                android:gravity="center_vertical">


                <ImageView
                    android:id="@+id/back_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:onClick="onAction"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:src="@drawable/back_icon_w_left" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:text="钱包"
                    android:textColor="@color/fffefe"
                    android:textSize="@dimen/text_size_17" />

                <TextView
                    android:id="@+id/wallet_zj_details_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:onClick="onAction"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="资金明细"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_13" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_05"
        android:layout_marginTop="15dp"
        android:background="@color/linee7e7e7" />

    <TextView
        android:id="@+id/wallet_bank_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/btn_duf"
        android:drawableLeft="@drawable/wallet_bank_icon"
        android:drawableRight="@drawable/mine_right_icon"
        android:drawablePadding="@dimen/text_image"
        android:gravity="center_vertical"
        android:onClick="onAction"
        android:paddingLeft="@dimen/paddingLeft"
        android:paddingRight="@dimen/paddingRight"
        android:text="银行卡"
        android:textColor="@color/color000000"
        android:textSize="@dimen/text_size_15" />


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_05"

        android:background="@color/linee7e7e7" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_05"
        android:layout_marginTop="15dp"
        android:background="@color/linee7e7e7" />

    <TextView
        android:id="@+id/wallet_tx_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/btn_duf"
        android:drawableLeft="@drawable/wallet_tx_icon"
        android:drawableRight="@drawable/mine_right_icon"
        android:drawablePadding="@dimen/text_image"
        android:gravity="center_vertical"
        android:onClick="onAction"
        android:paddingLeft="@dimen/paddingLeft"
        android:paddingRight="@dimen/paddingRight"
        android:text="提现"
        android:textColor="@color/color000000"
        android:textSize="@dimen/text_size_15" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_05"
        android:background="@color/linee7e7e7" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="温馨提示：提现将在1~3工作日之到账，节假日除外"
        android:textColor="@color/color666666"
        android:textSize="@dimen/text_size_11" />

</LinearLayout>

