<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_duf"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <com.youth.xframe.widget.RoundedImagView
            android:id="@+id/act_h_toclone_item_image"
            android:layout_width="145dp"
            android:layout_height="81dp"
            android:layout_marginLeft="18dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_default" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/act_h_toclone_item_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="NO.1"
                android:textColor="@color/FF333333"
                android:textSize="@dimen/text_size_16"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/act_h_toclone_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="JSMO智能产品个人网页JSMO智能产品个人网页"
                android:textColor="@color/color010101"
                android:textSize="@dimen/text_size_13" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/act_h_toclone_item_browse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="10000000000人使用"
                    android:textColor="@color/color666666"
                    android:textSize="@dimen/text_size_11" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/act_h_toclone_item_browse"
                    android:layout_toLeftOf="@+id/act_h_toclone_item_free"
                    android:layout_marginTop="6dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <com.youth.xframe.widget.CircleImageView
                        android:id="@+id/act_h_toclone_item_head_image"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_default"
                        app:civ_border_width="0dp" />

                    <TextView
                        android:id="@+id/act_h_toclone_item_head_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:ellipsize="end"
                        android:gravity="center_horizontal"
                        android:maxLines="1"
                        android:text="桥东波"
                        android:textColor="@color/color555555"
                        android:textSize="@dimen/text_size_10" />


                </LinearLayout>

                <TextView
                    android:id="@+id/act_h_toclone_item_free"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/btn_blue_r20_bg"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="5dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="5dp"
                    android:text="免费克隆"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_11" />
            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.0dp"
        android:background="@color/line_eaeaea" />
</LinearLayout>