<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/elect_share_other_item_ll"
    android:layout_width="match_parent"
    android:layout_height="145dp"
    android:background="@drawable/elect_personal_basic_bg"
    android:gravity="center_vertical"
    android:minHeight="145dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="horizontal"
            android:paddingTop="15dp"
            android:paddingRight="25dp"
            android:visibility="visible">

            <com.youth.xframe.widget.CircleImageView
                android:id="@+id/elect_share_other_item_head"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_default" />

            <TextView
                android:id="@+id/elect_share_other_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="小麦包"
                android:textColor="@color/color000000"
                android:textSize="@dimen/text_size_13" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/elect_share_other_item_num_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:orientation="horizontal"
            android:paddingTop="15dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/elect_share_other_item_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:text="我为他带来"
                android:textColor="@color/color666666"
                android:textSize="@dimen/text_size_13" />

            <TextView
                android:id="@+id/elect_share_other_item_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3544"
                android:textColor="@color/color34bd0a"
                android:textSize="@dimen/text_size_13" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="次浏览"
                android:textColor="@color/color666666"
                android:textSize="@dimen/text_size_13" />
        </LinearLayout>

        <ImageView
            android:id="@+id/elect_share_other_item_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:paddingTop="15dp"
            android:paddingRight="25dp"
            android:paddingBottom="5dp"
            android:src="@drawable/home_share_icon"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="25dp"
        android:paddingTop="12dp"
        android:paddingRight="25dp"
        android:paddingBottom="15dp">


        <ImageView
            android:id="@+id/elect_share_other_item_image"
            android:layout_width="117dp"
            android:layout_height="66dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_default" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/elect_share_other_item_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="互推哥互推哥互推哥互推哥互推互推哥互推哥互推哥互推哥互推"
                android:textColor="@color/color0a0a0a"
                android:textSize="@dimen/text_size_15" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1.0"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/elect_share_other_item_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="11dp"
                        android:ellipsize="end"
                        android:gravity="center_horizontal"
                        android:maxLines="1"
                        android:text="2018-12-21"
                        android:textColor="@color/color666666"
                        android:textSize="@dimen/text_size_11" />

                    <TextView
                        android:id="@+id/elect_share_other_item_browse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:ellipsize="end"
                        android:gravity="center_horizontal"
                        android:maxLines="1"
                        android:text="浏览 5214"
                        android:textColor="@color/color666666"
                        android:textSize="@dimen/text_size_11" />
                </LinearLayout>


                <TextView
                    android:id="@+id/elect_share_other_item_tx"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:background="@drawable/btn_blue_r20_bg"
                    android:gravity="center"
                    android:paddingLeft="18dp"
                    android:paddingRight="18dp"
                    android:text="提醒他分享"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_11"
                    android:visibility="gone" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>