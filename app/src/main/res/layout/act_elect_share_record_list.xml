<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/FFf6f6f6"
    android:orientation="vertical">

    <com.youth.xframe.widget.XScrollView
        android:id="@+id/elect_share_record_sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/act_elect_share_record_top" />

            <LinearLayout
                android:id="@+id/elect_share_record_top_wfx_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1.0"
                    android:text="未成功互推"
                    android:textColor="@color/FF333333"
                    android:textSize="@dimen/text_size_15"
                    android:textStyle="bold" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="15dp"
                    android:text="您参加了互推分享了他,他未分享你"
                    android:textColor="@color/color666666"
                    android:textSize="@dimen/text_size_11" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <include layout="@layout/list_no_data" />

                <ListView
                    android:id="@+id/list_pull_value"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@color/transparent"
                    android:dividerHeight="0dp"
                    android:listSelector="@color/transparent" />

            </RelativeLayout>


        </LinearLayout>

    </com.youth.xframe.widget.XScrollView>


</LinearLayout>

