<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/member_vip_item_ll"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_member_vip_false_bg"
    android:clickable="true"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="35dp"
        android:paddingRight="35dp">


        <TextView
            android:id="@+id/member_vip_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15.0dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="月度会员"
            android:textColor="@color/color666666"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/member_vip_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12.0dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="￥39"
            android:textColor="@color/FF996b23"
            android:textSize="@dimen/text_size_20"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/member_vip_item_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8.0dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="￥55"
            android:textColor="@color/FFd6d6d6"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/member_vip_item_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12.0dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="30天"
            android:textColor="@color/FF333333"
            android:textSize="@dimen/text_size_13" />
    </LinearLayout>

    <ImageView
        android:id="@+id/member_vip_item_true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="-8dp"
        android:layout_marginRight="11dp"
        android:layout_marginBottom="11dp"
        android:background="@drawable/menber_true_icon"
        android:visibility="visible" />
</LinearLayout>