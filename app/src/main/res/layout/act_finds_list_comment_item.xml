<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="59dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:orientation="vertical"
        android:paddingTop="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.youth.xframe.widget.CircleImageView
                android:id="@+id/finds_list_comment_item_head"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_launcher"
                app:civ_border_width="0dp" />

            <TextView
                android:id="@+id/finds_list_comment_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:ellipsize="end"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:maxLines="1"
                android:text="桥东波"
                android:textColor="@color/color666666"
                android:textSize="@dimen/text_size_13" />


        </LinearLayout>

        <TextView
            android:id="@+id/finds_list_comment_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="40dp"
            android:lineSpacingExtra="5dp"
            android:text="回复我：谢谢夸奖！2019-04-03" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/finds_list_comment_item_praise_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="16dp"
        android:paddingBottom="6dp">

        <ImageView
            android:id="@+id/finds_list_comment_item_praise_iv"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/finds_list_praise" />

        <TextView
            android:id="@+id/finds_list_comment_item_praise_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-2dp"
            android:text="0"
            android:textColor="@color/color999999"
            android:textSize="@dimen/text_size_12" />
    </LinearLayout>
</LinearLayout>

