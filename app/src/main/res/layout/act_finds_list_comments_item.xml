<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="16dp">

        <com.youth.xframe.widget.CircleImageView
            android:id="@+id/finds_list_comments_item_head"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_launcher"
            app:civ_border_width="0dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="vertical"
            android:paddingTop="12dp">

            <TextView
                android:id="@+id/finds_list_comments_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                android:maxLines="1"
                android:text="桥东波"
                android:textColor="@color/color666666"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/finds_list_comments_item_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="40dp"
                android:lineSpacingExtra="5dp"
                android:text="回复我：谢谢夸奖！2019-04-03" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/finds_list_comments_item_praise_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:paddingRight="16dp"
            android:paddingBottom="10dp">

            <ImageView
                android:id="@+id/finds_list_comments_item_praise_iv"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/finds_list_praise" />

            <TextView
                android:id="@+id/finds_list_comments_item_praise_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-2dp"
                android:text="0"
                android:textColor="@color/color999999"
                android:textSize="@dimen/text_size_12" />
        </LinearLayout>


    </LinearLayout>

    <ListView
        android:id="@+id/finds_list_comments_item_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/transparent"
        android:dividerHeight="0dp"
        android:listSelector="@color/transparent"
        android:visibility="gone" />


    <TextView
        android:id="@+id/finds_list_comments_item_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="44dp"
        android:drawableRight="@drawable/finds_comments_more_icon"
        android:drawablePadding="5dp"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingRight="16dp"
        android:paddingBottom="6dp"
        android:text="展开更多回复"
        android:textColor="@color/color999999"
        android:textSize="@dimen/text_size_12" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_05"
        android:layout_marginTop="10dp"
        android:background="@color/line_eaeaea" />


</LinearLayout>

