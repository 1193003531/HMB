<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/efeff4"
    android:orientation="vertical">


    <include layout="@layout/stub_title_bar" />

    <ScrollView
        android:id="@+id/basic_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:text="头像"
                    android:textColor="@color/color000000"
                    android:textSize="@dimen/text_size_15" />

                <com.youth.xframe.widget.CircleImageView
                    android:id="@+id/basic_head_image"
                    android:onClick="onAction"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_launcher" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingLeft="15dp"
                        android:paddingRight="35dp"
                        android:text="姓名"
                        android:textColor="@color/color000000"
                        android:textSize="@dimen/text_size_15" />

                    <EditText
                        android:id="@+id/basic_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:background="@color/transparent"
                        android:gravity="center_vertical"
                        android:hint="请输入姓名"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:singleLine="true"
                        android:textColor="@color/color000000"
                        android:textColorHint="@color/cecccc"
                        android:textSize="@dimen/text_size_15" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:src="@drawable/basic_xing_icon" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_05"
                    android:layout_marginLeft="15dp"
                    android:background="@color/linee7e7e7" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingLeft="15dp"
                        android:paddingRight="35dp"
                        android:text="行业"
                        android:textColor="@color/color000000"
                        android:textSize="@dimen/text_size_15" />

                    <TextView
                        android:id="@+id/basic_industry"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:onClick="onAction"
                        android:background="@color/transparent"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:singleLine="true"
                        android:hint="请选择行业"
                        android:textColor="@color/color000000"
                        android:textColorHint="@color/cecccc"
                        android:textSize="@dimen/text_size_15" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_05"
                    android:layout_marginLeft="15dp"
                    android:background="@color/linee7e7e7" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingLeft="15dp"
                        android:paddingRight="35dp"
                        android:text="职位"
                        android:textColor="@color/color000000"
                        android:textSize="@dimen/text_size_15" />

                    <EditText
                        android:id="@+id/basic_jobs"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:background="@color/transparent"
                        android:gravity="center_vertical"
                        android:hint="请输入职位"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:singleLine="true"
                        android:textColor="@color/color000000"
                        android:textColorHint="@color/cecccc"
                        android:textSize="@dimen/text_size_15" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:src="@drawable/basic_xing_icon" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_05"
                    android:layout_marginLeft="15dp"
                    android:background="@color/linee7e7e7" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingLeft="15dp"
                        android:paddingRight="35dp"
                        android:text="公司"
                        android:textColor="@color/color000000"
                        android:textSize="@dimen/text_size_15" />

                    <EditText
                        android:id="@+id/basic_company"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:background="@color/transparent"
                        android:gravity="center_vertical"
                        android:hint="请输入公司名称"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:singleLine="true"
                        android:textColor="@color/color000000"
                        android:textColorHint="@color/cecccc"
                        android:textSize="@dimen/text_size_15" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:src="@drawable/basic_xing_icon" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_05"
                    android:layout_marginLeft="15dp"
                    android:background="@color/linee7e7e7" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingLeft="15dp"
                        android:paddingRight="20dp"
                        android:text="广告语"
                        android:textColor="@color/color000000"
                        android:textSize="@dimen/text_size_15" />

                    <EditText
                        android:id="@+id/basic_slogan"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:background="@color/transparent"
                        android:gravity="center_vertical"
                        android:hint="请输入广告语"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:singleLine="true"
                        android:textColor="@color/color000000"
                        android:textColorHint="@color/cecccc"
                        android:textSize="@dimen/text_size_15" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_05"
                    android:background="@color/linee7e7e7" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:paddingRight="5dp"
                        android:text="公开手机号"
                        android:textColor="@color/color000000"
                        android:textSize="@dimen/text_size_15" />

                    <Switch
                        android:id="@+id/basic_is_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:checked="true"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:thumb="@drawable/switch_thumb"
                        android:track="@drawable/switch_track" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_05"
                    android:layout_marginLeft="15dp"
                    android:background="@color/linee7e7e7" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingLeft="15dp"
                        android:paddingRight="20dp"
                        android:text="手机号"
                        android:textColor="@color/color000000"
                        android:textSize="@dimen/text_size_15" />

                    <EditText
                        android:id="@+id/basic_phone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:background="@color/transparent"
                        android:gravity="center_vertical"
                        android:hint="请输入手机号"
                        android:inputType="phone"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:singleLine="true"
                        android:textColor="@color/color000000"
                        android:textColorHint="@color/cecccc"
                        android:textSize="@dimen/text_size_15" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:src="@drawable/basic_xing_icon" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_05"
                    android:background="@color/linee7e7e7" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:paddingRight="35dp"
                        android:text="性别"
                        android:textColor="@color/color000000"
                        android:textSize="@dimen/text_size_15" />

                    <TextView
                        android:id="@+id/basic_sex"
                        android:onClick="onAction"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:background="@color/transparent"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:singleLine="true"
                        android:hint="请选择性别"
                        android:textColor="@color/color000000"
                        android:textColorHint="@color/cecccc"
                        android:textSize="@dimen/text_size_15" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_05"
                    android:layout_marginLeft="15dp"
                    android:background="@color/linee7e7e7" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingLeft="15dp"
                        android:paddingRight="35dp"
                        android:text="生日"
                        android:textColor="@color/color000000"
                        android:textSize="@dimen/text_size_15" />

                    <TextView
                        android:id="@+id/basic_birthday"
                        android:onClick="onAction"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:background="@color/transparent"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:singleLine="true"
                        android:hint="请选择生日"
                        android:textColor="@color/color000000"
                        android:textColorHint="@color/cecccc"
                        android:textSize="@dimen/text_size_15" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_05"
                    android:layout_marginLeft="15dp"
                    android:background="@color/linee7e7e7" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingLeft="15dp"
                        android:paddingRight="35dp"
                        android:text="微信"
                        android:textColor="@color/color000000"
                        android:textSize="@dimen/text_size_15" />

                    <EditText
                        android:id="@+id/basic_wechat"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:background="@color/transparent"
                        android:gravity="center_vertical"
                        android:hint="请输入微信"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:singleLine="true"
                        android:textColor="@color/color000000"
                        android:textColorHint="@color/cecccc"
                        android:textSize="@dimen/text_size_15" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_05"
                    android:layout_marginLeft="15dp"
                    android:background="@color/linee7e7e7" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingLeft="15dp"
                        android:paddingRight="5dp"
                        android:text="详细地址"
                        android:textColor="@color/color000000"
                        android:textSize="@dimen/text_size_15" />

                    <EditText
                        android:id="@+id/basic_addr"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:background="@color/transparent"
                        android:gravity="center_vertical"
                        android:hint="请输入详细地址"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:singleLine="true"
                        android:textColor="@color/color000000"
                        android:textColorHint="@color/cecccc"
                        android:textSize="@dimen/text_size_15" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_05"
                    android:layout_marginLeft="15dp"
                    android:background="@color/linee7e7e7" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingLeft="15dp"
                        android:paddingRight="5dp"
                        android:text="所在城市"
                        android:textColor="@color/color000000"
                        android:textSize="@dimen/text_size_15" />

                    <TextView
                        android:id="@+id/basic_city"
                        android:onClick="onAction"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:background="@color/transparent"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:singleLine="true"
                        android:hint="请选择城市"
                        android:textColor="@color/color000000"
                        android:textColorHint="@color/cecccc"
                        android:textSize="@dimen/text_size_15" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_05"
                    android:layout_marginLeft="15dp"
                    android:background="@color/linee7e7e7" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingLeft="15dp"
                        android:paddingRight="35dp"
                        android:text="邮箱"
                        android:textColor="@color/color000000"
                        android:textSize="@dimen/text_size_15" />

                    <EditText
                        android:id="@+id/basic_email"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:background="@color/transparent"
                        android:gravity="center_vertical"
                        android:hint="请输入邮箱"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:singleLine="true"
                        android:textColor="@color/color000000"
                        android:textColorHint="@color/cecccc"
                        android:textSize="@dimen/text_size_15" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_05"
                    android:layout_marginLeft="15dp"
                    android:background="@color/linee7e7e7" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingLeft="15dp"
                        android:paddingRight="35dp"
                        android:text="网址"
                        android:textColor="@color/color000000"
                        android:textSize="@dimen/text_size_15" />

                    <EditText
                        android:id="@+id/basic_web"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:background="@color/transparent"
                        android:gravity="center_vertical"
                        android:hint="请输入网址"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:singleLine="true"
                        android:textColor="@color/color000000"
                        android:textColorHint="@color/cecccc"
                        android:textSize="@dimen/text_size_15" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_05"
                    android:background="@color/linee7e7e7" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/efeff4" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/white"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/basic_save"
            android:onClick="onAction"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/btn_blue_r5_bg"
            android:gravity="center"
            android:text="保存"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16" />
    </LinearLayout>
</LinearLayout>

