            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.youth.xframe.banner.BannerViewPager
                    android:id="@+id/home_banner_viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!--<ImageView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="180dp"-->
                <!--android:src="@drawable/home_banner" />-->

                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="182dp"
                    android:background="@drawable/fragment_home_top_bg" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="140dp"
                        android:orientation="horizontal"
                        android:paddingTop="22dp"
                        android:visibility="visible">

                        <LinearLayout
                            android:id="@+id/home_marking_card_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="-6dp"
                            android:layout_weight="1.0"
                            android:background="@drawable/btn_duf_home_top_item"
                            android:gravity="center"
                            android:orientation="vertical">


                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="-16dp"
                                android:src="@drawable/fragment_home_top_item_mp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="个人名片"
                                android:textColor="@color/color666666"
                                android:textSize="@dimen/text_size_13"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:text="彰显身份标示"
                                android:textColor="@color/color999999"
                                android:textSize="@dimen/text_size_11" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/home_web_personality_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="-3dp"
                            android:layout_marginRight="-3dp"
                            android:layout_weight="1.0"
                            android:background="@drawable/btn_duf_home_top_item"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="-16dp"
                                android:src="@drawable/fragment_home_top_item_cp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
