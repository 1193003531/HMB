                                android:layout_centerVertical="true"
                                android:paddingLeft="16dp"
                                android:text="@string/home_marketing_list"
                                android:textColor="@color/color333333"
                                android:textSize="@dimen/text_size_17"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/home_marketing_list_more"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerVertical="true"
                                android:drawableRight="@drawable/fragment_home_right_jt"
                                android:gravity="right|center_vertical"
                                android:paddingRight="15dp"
                                android:text="@string/home_more"
                                android:textColor="@color/color999999"
                                android:textSize="@dimen/text_size_11" />
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="-8dp"
                            android:layout_marginRight="-8dp"
                            android:background="@drawable/fragment_home_list_bg"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/fragment_home_marketing_week"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawableBottom="@drawable/fragment_home_marketing_icon"
                                    android:drawablePadding="3dp"
                                    android:paddingLeft="10dp"
                                    android:paddingTop="10dp"
                                    android:paddingRight="10dp"
                                    android:paddingBottom="10dp"
                                    android:text="周榜"
                                    android:textColor="@color/colore262626"
                                    android:textSize="@dimen/text_size_15"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/fragment_home_marketing_month"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawablePadding="3dp"
                                    android:paddingLeft="8dp"
                                    android:paddingTop="10dp"
                                    android:paddingRight="10dp"
                                    android:paddingBottom="10dp"
                                    android:text="月榜"
                                    android:textColor="@color/color999999"
                                    android:textSize="@dimen/text_size_15" />

                                <TextView
                                    android:id="@+id/fragment_home_marketing_total"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawablePadding="3dp"
                                    android:paddingLeft="10dp"
                                    android:paddingTop="10dp"
                                    android:paddingRight="10dp"
                                    android:paddingBottom="10dp"
                                    android:text="总榜"
                                    android:textColor="@color/color999999"
                                    android:textSize="@dimen/text_size_15" />

                            </LinearLayout>

                            <LinearLayout
