                        android:layout_height="wrap_content"
                        android:layout_marginTop="-10dp"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="15dp"
                            android:text="营销工具"
                            android:textColor="@color/color333333"
                            android:textSize="@dimen/text_size_17"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="-7dp"
                            android:orientation="horizontal">


                            <LinearLayout
                                android:id="@+id/home_client_mg_btn"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="-12dp"
                                android:layout_marginRight="-8.5dp"
                                android:layout_weight="1.0"
                                android:background="@drawable/btn_duf_home_yxgj_item"
                                android:orientation="horizontal"
                                android:paddingLeft="30dp"
                                android:paddingTop="32dp">


                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/fragment_home_top_khgl" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="客户管理"
                                        android:textColor="@color/color666666"
                                        android:textSize="@dimen/text_size_13"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:text="客户管理更轻松"
                                        android:textColor="@color/color999999"
                                        android:textSize="@dimen/text_size_11" />
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/home_marketing_tag_btn"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="-8.5dp"
                                android:layout_marginRight="-12dp"
                                android:layout_weight="1.0"
                                android:background="@drawable/btn_duf_home_yxgj_item"
                                android:orientation="horizontal"
                                android:paddingLeft="30dp"
                                android:paddingTop="32dp">


                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/fragment_home_top_yxbq" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="营销标签"
                                        android:textColor="@color/color666666"
                                        android:textSize="@dimen/text_size_13"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:text="营销推广没烦恼"
                                        android:textColor="@color/color999999"
                                        android:textSize="@dimen/text_size_11" />
                                </LinearLayout>

                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-7dp"
                            android:orientation="horizontal">


                            <LinearLayout
                                android:id="@+id/home_marketing_lib_btn"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="-12dp"
                                android:layout_marginRight="-8.5dp"
                                android:layout_weight="1.0"
                                android:background="@drawable/btn_duf_home_yxgj_item"
                                android:orientation="horizontal"
                                android:paddingLeft="30dp"
                                android:paddingTop="32dp">


                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/fragment_home_top_jpwk" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="精品文库"
                                        android:textColor="@color/color666666"
                                        android:textSize="@dimen/text_size_13"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:text="千万好文等你撩"
                                        android:textColor="@color/color999999"
                                        android:textSize="@dimen/text_size_11" />
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="-8.5dp"
                                android:layout_marginRight="-12dp"
                                android:layout_weight="1.0"
                                android:background="@drawable/btn_duf_home_yxgj_item"
                                android:orientation="horizontal"
                                android:paddingLeft="30dp"
                                android:paddingTop="32dp">


                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/fragment_home_top_more" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="即将上线"
                                        android:textColor="@color/color666666"
                                        android:textSize="@dimen/text_size_13"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:text="后续功能开发中"
                                        android:textColor="@color/color999999"
                                        android:textSize="@dimen/text_size_11" />
                                </LinearLayout>

                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/home_lib_list_ll"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:paddingLeft="16dp"
                                    android:text="精品文库"
                                    android:textColor="@color/color333333"
                                    android:textSize="@dimen/text_size_17"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/home_lib_list_more"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerVertical="true"
                                    android:drawableRight="@drawable/fragment_home_right_jt"
                                    android:gravity="right|center_vertical"
                                    android:paddingRight="15dp"
                                    android:text="@string/home_more"
                                    android:textColor="@color/color999999"
                                    android:textSize="@dimen/text_size_11" />
                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="-8dp"
                                android:layout_marginRight="-8dp"
                                android:background="@drawable/fragment_home_list_bg"
