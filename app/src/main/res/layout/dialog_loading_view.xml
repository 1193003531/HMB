<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/xframe_loading_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/XFrame_white"
    android:orientation="vertical"
    android:padding="@dimen/XFrame_spacing">


    <com.youth.xframe.widget.GifView
        android:id="@+id/load_gif_view"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="center_horizontal" />


    <ProgressBar
        android:id="@+id/xframe_loading_progressbar"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="@dimen/XFrame_progressbar_size"
        android:layout_height="@dimen/XFrame_progressbar_size"
        android:layout_gravity="center"
        android:indeterminateDrawable="@drawable/loading_dialog_progress"
        android:visibility="gone" />


    <TextView
        android:id="@+id/xframe_loading_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_gravity="center"
        android:text="@string/xloading_dialog_message"
        android:textColor="@color/color666666"
        android:textSize="@dimen/text_size_12" />

</LinearLayout>
