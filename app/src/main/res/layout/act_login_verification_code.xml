<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/login_back"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center"
        android:onClick="onAction"
        android:paddingLeft="16dp"
        android:paddingRight="17dp"
        android:src="@drawable/login_back_left" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="20dp"
        android:text="输入短信验证码"
        android:textColor="@color/color333333"
        android:textSize="@dimen/text_size_27"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/login_v_code_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:text="已发送到"
        android:textColor="@color/color999999"
        android:textSize="@dimen/text_size_13"
        android:textStyle="normal" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@color/white">

        <com.huimaibao.app.view.SixEditView
            android:id="@+id/login_v_code_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <TextView
        android:id="@+id/login_v_code_send"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp"
        android:gravity="center"
        android:onClick="onAction"
        android:text="重新获取"
        android:textColor="@color/color666666"
        android:textSize="@dimen/text_size_13" />


</LinearLayout>