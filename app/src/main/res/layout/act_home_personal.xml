<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical">


        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="onAction"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:src="@drawable/ico_arrow_left" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLength="10"
            android:maxLines="1"
            android:text="收入详情"
            android:textColor="@color/FF333333"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/right_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLength="10"
            android:maxLines="1"
            android:onClick="onAction"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="赚钱攻略"
            android:textColor="@color/color666666"
            android:textSize="@dimen/text_size_14" />
    </RelativeLayout>

    <com.youth.xframe.widget.XScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7.5dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="7.5dp"
                android:background="@drawable/income_top_bg"
                android:orientation="vertical"
                android:padding="15dp">

                <LinearLayout
                    android:id="@+id/mine_basic_ll_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="18dp"
                    android:orientation="horizontal">


                    <com.youth.xframe.widget.CircleImageView
                        android:id="@+id/home_personal_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_launcher" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="2dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/home_personal_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.0"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text=""
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_16"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/home_personal_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="14dp"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="NO.1"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_18"
                                android:textStyle="bold|italic" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/home_personal_fws_iv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/mine_fws_icon"
                                android:visibility="visible" />

                            <ImageView
                                android:id="@+id/home_personal_rzyh_iv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/mine_rzyh_icon"
                                android:visibility="visible" />

                            <ImageView
                                android:id="@+id/home_personal_vip_iv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/mine_vip_1_icon"
                                android:visibility="visible" />

                            <ImageView
                                android:id="@+id/home_personal_shop_iv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/mine_shop_icon"
                                android:visibility="visible" />

                            <ImageView
                                android:id="@+id/home_personal_ht_iv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/mine_ht_1_icon"
                                android:visibility="visible" />
                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/home_personal_money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="14dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="总收入￥0元"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_15" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="20dp"
                android:background="#f5f5f5"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="收入详情"
                android:textColor="@color/color666666"
                android:textSize="@dimen/text_size_12" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <include layout="@layout/list_no_data" />

                <ListView
                    android:id="@+id/list_pull_value"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@color/transparent"
                    android:dividerHeight="0dp"
                    android:listSelector="@color/transparent" />

            </RelativeLayout>
        </LinearLayout>
    </com.youth.xframe.widget.XScrollView>

</LinearLayout>

