<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="30dp"
        android:text="要流量，上汇脉宝"
        android:textColor="@color/color000000"
        android:textSize="@dimen/text_size_20"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/login_bg_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="11dp"
            android:background="@drawable/login_sms_bg"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="8.5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/login_sms_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:onClick="onAction"
                    android:text="短信登录"
                    android:textColor="@color/FF274FF3"
                    android:textSize="@dimen/text_size_15" />

                <TextView
                    android:id="@+id/login_pwd_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:onClick="onAction"
                    android:text="密码登录"
                    android:textColor="@color/color666666"
                    android:textSize="@dimen/text_size_15" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="26dp"
                android:background="@drawable/ed_f7_r2_bg"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/login_account"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:background="@color/transparent"
                    android:hint="输入手机号"
                    android:inputType="phone"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text=""
                    android:textColor="@color/color666666"
                    android:textColorHint="@color/color999999"
                    android:textSize="@dimen/text_size_14" />

                <ImageView
                    android:id="@+id/login_account_del"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:src="@drawable/del_edit_icon"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/login_code_ll"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="19dp"
                android:layout_marginRight="26dp"
                android:background="@drawable/ed_f7_r2_bg"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/login_code"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:background="@color/transparent"
                    android:hint="输入验证码"
                    android:inputType="number"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textColor="@color/color666666"
                    android:textColorHint="@color/color999999"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:id="@+id/login_get_code"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:onClick="onAction"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="获取验证码"
                    android:textColor="@color/color_2d54f5"
                    android:textSize="@dimen/text_size_12" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/login_pwd_ll"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="19dp"
                android:layout_marginRight="26dp"
                android:background="@drawable/ed_f7_r2_bg"
                android:orientation="horizontal"
                android:visibility="gone">

                <EditText
                    android:id="@+id/login_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:background="@color/transparent"
                    android:hint="输入密码"
                    android:inputType="textPassword"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text=""
                    android:textColor="@color/color666666"
                    android:textColorHint="@color/color999999"
                    android:textSize="@dimen/text_size_14" />

                <ImageView
                    android:id="@+id/login_pwd_del"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:src="@drawable/del_edit_icon"
                    android:visibility="invisible" />
            </LinearLayout>

            <TextView
                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="26dp"
                android:layout_marginRight="26dp"
                android:background="@drawable/btn_login_r2_bg"
                android:gravity="center"
                android:onClick="onAction"
                android:text="登录"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/login_forgot"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:onClick="onAction"
                    android:paddingLeft="26dp"
                    android:paddingRight="26dp"
                    android:text="忘记密码"
                    android:textColor="@color/color666666"
                    android:textSize="@dimen/text_size_13" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_10"
                    android:layout_weight="1.0" />

                <TextView
                    android:id="@+id/login_register"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:onClick="onAction"
                    android:paddingLeft="26dp"
                    android:paddingRight="26dp"
                    android:text="一键注册"
                    android:textColor="@color/color_2950f3"
                    android:textSize="@dimen/text_size_13" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:layout_width="50dp"
                android:layout_height="@dimen/line_05"
                android:background="@color/line_c3c3c3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="其他登录方式"
                android:textColor="@color/FF333333"
                android:textSize="@dimen/text_size_12" />

            <View
                android:layout_width="50dp"
                android:layout_height="@dimen/line_05"
                android:background="@color/line_c3c3c3" />
        </LinearLayout>

        <ImageView
            android:id="@+id/login_wx_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:onClick="onAction"
            android:paddingLeft="25dp"
            android:paddingTop="23dp"
            android:paddingRight="25dp"
            android:src="@drawable/login_wechat" />

        <TextView
            android:id="@+id/login_user_agreement"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:onClick="onAction"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="@string/login_user_agreement"
            android:textColor="@color/color666666"
            android:textSize="@dimen/text_size_10" />
    </LinearLayout>
</LinearLayout>