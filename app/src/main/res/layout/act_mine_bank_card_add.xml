<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/efeff4"
    android:orientation="vertical">


    <include layout="@layout/stub_title_bar" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="请绑定持卡人本人的银行卡" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="5dp"
                android:text="持卡人"
                android:textColor="@color/FF333333"
                android:textSize="@dimen/text_size_16" />

            <EditText
                android:id="@+id/bank_add_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:background="@color/transparent"
                android:gravity="center_vertical"
                android:hint="请输入持卡人姓名"
                android:maxLines="1"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textColor="@color/FF333333"
                android:textColorHint="@color/colorc7c7c7"
                android:textSize="@dimen/text_size_16" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_05"
            android:layout_marginLeft="16dp"
            android:background="#efeff1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="21dp"
                android:text="银行"
                android:textColor="@color/color333333"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:id="@+id/bank_add_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:background="@color/transparent"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="工商银行"
                android:textColor="@color/color333333"
                android:textSize="@dimen/text_size_16" />

            <ImageView
                android:id="@+id/bank_add_toast"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:clickable="true"
                android:gravity="center"
                android:onClick="onAction"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:visibility="visible"
                android:src="@drawable/wallet_warning_icon" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_05"
            android:layout_marginLeft="16dp"
            android:background="#efeff1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="21dp"
                android:text="卡号"
                android:textColor="@color/color333333"
                android:textSize="@dimen/text_size_16" />

            <EditText
                android:id="@+id/bank_add_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:background="@color/transparent"
                android:gravity="center_vertical"
                android:hint="请输入银行卡号"
                android:inputType="number"
                android:maxLines="1"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textColor="@color/color333333"
                android:textColorHint="@color/cecccc"
                android:textSize="@dimen/text_size_16" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_05"
            android:background="#efeff1" />
    </LinearLayout>

    <TextView
        android:id="@+id/bank_add_sure"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/btn_blue_r5_bg"
        android:clickable="true"
        android:gravity="center"
        android:onClick="onAction"
        android:text="完成"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_16" />

</LinearLayout>

