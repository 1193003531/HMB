<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">
        <View
            android:id="@+id/fake_status_bar"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height"
            android:background="@color/transparent"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:visibility="visible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center_vertical"
                android:text="@string/home_3"
                android:textColor="@color/FF333333"
                android:textSize="@dimen/text_size_22"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/finds_my_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="我的动态"
                android:textColor="@color/FF333333"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/finds_msg_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/finds_msg_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.youth.xframe.widget.CircleImageView
                android:id="@+id/finds_msg_head"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="9dp"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/finds_msg_content"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="6dp"
                android:paddingRight="15dp"
                android:text="李岩洪等3人回复了你"
                android:textColor="@color/color666666"
                android:textSize="@dimen/text_size_12" />

        </LinearLayout>


        <include layout="@layout/list_pull_data" />
    </LinearLayout>

    <ImageView
        android:id="@+id/finds_add_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="97dp"
        android:padding="17dp"
        android:src="@drawable/finds_add_icon" />

</RelativeLayout>