<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <include layout="@layout/stub_title_bar" />


    <ScrollView
        android:id="@+id/making_card_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="完善名片信息"
                android:textColor="@color/FF333333"
                android:textSize="@dimen/text_size_22"
                android:textStyle="bold" />

            <com.youth.xframe.widget.CircleImageView
                android:id="@+id/making_card_head"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="34dp"
                android:onClick="onAction"
                android:src="@drawable/login_pic_head_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="上传头像*"
                android:textColor="@color/color666666"
                android:textSize="@dimen/text_size_13" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="@color/white"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="46dp">

                    <TextView
                        android:id="@+id/making_card_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:text="姓名*"
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/text_size_11" />


                    <EditText
                        android:id="@+id/making_card_name"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/transparent"
                        android:gravity="center_vertical"
                        android:maxLength="8"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/FF333333"
                        android:textCursorDrawable="@drawable/login_cursor_drawable"
                        android:textSize="@dimen/text_size_15" />

                </RelativeLayout>

                <ImageView
                    android:id="@+id/making_card_name_iv"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_05"
                    android:layout_marginLeft="15dp"
                    android:background="@color/line_eaeaea" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/making_card_jobs_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:text="职位*"
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/text_size_11" />


                    <EditText
                        android:id="@+id/making_card_jobs"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/transparent"
                        android:gravity="center_vertical"
                        android:maxLength="20"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:singleLine="true"
                        android:textColor="@color/FF333333"
                        android:textCursorDrawable="@drawable/login_cursor_drawable"
                        android:textSize="@dimen/text_size_15" />

                </RelativeLayout>

                <ImageView
                    android:id="@+id/making_card_jobs_iv"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_05"
                    android:layout_marginLeft="15dp"
                    android:background="@color/line_eaeaea" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/making_card_company_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:text="公司*"
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/text_size_11" />


                    <EditText
                        android:id="@+id/making_card_company"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/transparent"
                        android:gravity="center_vertical"
                        android:maxLength="50"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:singleLine="true"
                        android:textColor="@color/FF333333"
                        android:textCursorDrawable="@drawable/login_cursor_drawable"
                        android:textSize="@dimen/text_size_15" />

                </RelativeLayout>


                <ImageView
                    android:id="@+id/making_card_company_iv"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_05"
                    android:layout_marginLeft="15dp"
                    android:background="@color/line_eaeaea" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/making_card_phone_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:text="电话*"
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/text_size_11" />

                    <EditText
                        android:id="@+id/making_card_phone"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/transparent"
                        android:gravity="center_vertical"
                        android:inputType="phone"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:singleLine="true"
                        android:textColor="@color/FF333333"
                        android:textCursorDrawable="@drawable/login_cursor_drawable"
                        android:textSize="@dimen/text_size_15" />

                </RelativeLayout>

                <ImageView
                    android:id="@+id/making_card_phone_iv"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_05"
                    android:layout_marginLeft="15dp"
                    android:background="@color/line_eaeaea" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/making_card_wechat_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:text="微信"
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/text_size_11" />


                    <EditText
                        android:id="@+id/making_card_wechat"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/transparent"
                        android:gravity="center_vertical"
                        android:maxLength="30"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:singleLine="true"
                        android:textColor="@color/FF333333"
                        android:textCursorDrawable="@drawable/login_cursor_drawable"
                        android:textSize="@dimen/text_size_15" />

                </RelativeLayout>


                <ImageView
                    android:id="@+id/making_card_wechat_iv"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_05"
                    android:layout_marginLeft="15dp"
                    android:background="@color/line_eaeaea" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/making_card_city_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:text="城市"
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/text_size_11" />


                    <EditText
                        android:id="@+id/making_card_city"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:layout_alignParentBottom="true"
                        android:layout_weight="1.0"
                        android:background="@color/transparent"
                        android:cursorVisible="false"
                        android:drawableRight="@drawable/mine_right_icon"
                        android:gravity="center_vertical"
                        android:onClick="onAction"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/FF333333"
                        android:textCursorDrawable="@drawable/login_cursor_drawable"
                        android:textSize="@dimen/text_size_15" />

                </RelativeLayout>

                <ImageView
                    android:id="@+id/making_card_city_iv"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_05"
                    android:layout_marginLeft="15dp"
                    android:background="@color/line_eaeaea" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/making_card_addr_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:text="地址"
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/text_size_11" />


                    <EditText
                        android:id="@+id/making_card_addr"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/transparent"
                        android:gravity="center_vertical"
                        android:maxLength="35"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:singleLine="true"
                        android:textColor="@color/FF333333"
                        android:textCursorDrawable="@drawable/login_cursor_drawable"
                        android:textSize="@dimen/text_size_15" />

                </RelativeLayout>

                <ImageView
                    android:id="@+id/making_card_addr_iv"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_05"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="15dp"
                    android:background="@color/line_eaeaea" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:id="@+id/making_card_introduce_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:text="简介"
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/text_size_11" />

                    <TextView
                        android:id="@+id/making_card_introduce_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:paddingRight="15dp"
                        android:text="限50字"
                        android:textColor="@color/color999999"
                        android:textSize="@dimen/text_size_13" />

                    <EditText
                        android:id="@+id/making_card_introduce"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/transparent"
                        android:gravity="center_vertical"
                        android:maxLength="50"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:singleLine="true"
                        android:textColor="@color/FF333333"
                        android:textCursorDrawable="@drawable/login_cursor_drawable"
                        android:textSize="@dimen/text_size_15" />


                </RelativeLayout>

                <ImageView
                    android:id="@+id/making_card_introduce_iv"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_05"
                    android:layout_marginLeft="15dp"
                    android:background="@color/line_eaeaea" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingLeft="15dp"
                        android:paddingRight="5dp"
                        android:text="个人性格描述，让陌生客户更多的了解你"
                        android:textColor="@color/color999999"
                        android:textSize="@dimen/text_size_13"
                        android:visibility="gone" />


                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:text="相册"
                    android:textColor="@color/color101010"
                    android:textSize="@dimen/text_size_16" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:paddingRight="10dp"
                    android:text="(最多3张)"
                    android:textColor="#acacac"
                    android:textSize="@dimen/text_size_12" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:paddingLeft="15dp"
                android:paddingTop="8dp"
                android:paddingRight="10dp"
                android:text="上传生活靓照，让陌生客户认识你增加对你的信赖感"
                android:textSize="@dimen/text_size_12" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:orientation="vertical">

                <com.youth.xframe.widget.NoScrollGridView
                    android:id="@+id/making_card_album"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:horizontalSpacing="10dp"
                    android:listSelector="@color/transparent"
                    android:numColumns="3"
                    android:verticalSpacing="10dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>

