<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <com.youth.xframe.widget.XScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="65dp"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="228dp"
                    android:background="@drawable/member_top_bg"
                    android:orientation="horizontal">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="80dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.youth.xframe.widget.CircleImageView
                        android:id="@+id/member_vip_head_image"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_default" />

                    <TextView
                        android:id="@+id/member_vip_head_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:ellipsize="end"
                        android:gravity="center_horizontal"
                        android:maxLines="1"
                        android:text="--"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_16" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="122dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/member_top_buttom_bg"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/member_vip_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dp"
                        android:layout_marginTop="25dp"
                        android:text="--"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_15" />

                    <TextView
                        android:id="@+id/member_vip_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dp"
                        android:layout_marginTop="15dp"
                        android:text="--"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_12" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="218dp"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="25dp"
                        android:text="汇脉宝VIP套餐"
                        android:textColor="@color/FF333333"
                        android:textSize="@dimen/text_size_15" />

                    <com.youth.xframe.widget.XHorizontalScrollView
                        android:id="@+id/member_vip_hs"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginTop="15dp"
                        android:overScrollMode="never"
                        android:scrollbars="none">

                        <LinearLayout
                            android:id="@+id/member_vip_ll"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingLeft="10.0dip"
                            android:paddingRight="10.0dip" />
                    </com.youth.xframe.widget.XHorizontalScrollView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:text="汇脉宝VIP套餐"
                        android:textColor="@color/FF333333"
                        android:textSize="@dimen/text_size_15" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal"
                        android:paddingTop="14dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableTop="@drawable/member_1_icon"
                            android:drawablePadding="12dp"
                            android:gravity="center_horizontal"
                            android:text="N套微网制作"
                            android:textColor="@color/FF333333"
                            android:textSize="@dimen/text_size_11" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableTop="@drawable/member_2_icon"
                            android:drawablePadding="12dp"
                            android:gravity="center_horizontal"
                            android:text="海量内容收藏"
                            android:textColor="@color/FF333333"
                            android:textSize="@dimen/text_size_11" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableTop="@drawable/member_3_icon"
                            android:drawablePadding="12dp"
                            android:gravity="center_horizontal"
                            android:text="查看感兴趣"
                            android:textColor="@color/FF333333"
                            android:textSize="@dimen/text_size_11" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableTop="@drawable/member_4_icon"
                            android:drawablePadding="12dp"
                            android:gravity="center_horizontal"
                            android:text="奖励金可提现"
                            android:textColor="@color/FF333333"
                            android:textSize="@dimen/text_size_11" />
                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </com.youth.xframe.widget.XScrollView>


    <LinearLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/fake_status_bar"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/transparent"
            android:gravity="center_vertical">


            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="onAction"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:src="@drawable/back_icon_w_left" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLength="10"
                android:maxLines="1"
                android:text="会员中心"
                android:textColor="@color/fffefe"
                android:textSize="@dimen/text_size_17" />
        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_05"
            android:background="@color/linee7e7e7" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/member_vip_t_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:text="总计：0元"
                android:textColor="@color/FF333333"
                android:textSize="@dimen/text_size_16"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/member_vip_open_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#ddb474"
                android:gravity="center"
                android:onClick="onAction"
                android:paddingLeft="37dp"
                android:paddingRight="37dp"
                android:text="立即开通"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_16" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>

