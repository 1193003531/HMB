<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:orientation="vertical">

        <include layout="@layout/stub_title_bar" />

        <ScrollView
            android:id="@+id/card_detail_sc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/card_detail_top"
                    android:layout_width="match_parent"
                    android:layout_height="217dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:visibility="visible" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_weight="1.0"
                    android:background="@color/FFf6f6f6"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:text="名片信息"
                    android:textColor="#444444"
                    android:textSize="@dimen/text_size_12" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/card_detail_name_tv"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:drawableLeft="@drawable/making_card_name_icon"
                        android:drawablePadding="15dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:text=""
                        android:textColor="@color/color000000"
                        android:textSize="@dimen/text_size_15" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/line_05"
                        android:layout_marginLeft="15dp"
                        android:background="@color/linee7e7e7" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/card_detail_jobs_tv"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:drawableLeft="@drawable/making_card_jobs_icon"
                        android:drawablePadding="15dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:text=""
                        android:textColor="@color/color000000"
                        android:textSize="@dimen/text_size_15" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/line_05"
                        android:layout_marginLeft="15dp"
                        android:background="@color/linee7e7e7" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/card_detail_phone_tv"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/making_card_phone_icon"
                            android:drawablePadding="15dp"
                            android:gravity="center_vertical"
                            android:paddingLeft="15dp"
                            android:text=""
                            android:textColor="@color/color000000"
                            android:textSize="@dimen/text_size_15" />

                        <TextView
                            android:id="@+id/card_detail_phone_add"
                            android:layout_width="wrap_content"
                            android:layout_height="45dp"
                            android:gravity="center_vertical"
                            android:onClick="onAction"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:text="加入通讯录"
                            android:textColor="@color/FF274FF3"
                            android:textSize="@dimen/text_size_14" />

                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/line_05"
                        android:layout_marginLeft="15dp"
                        android:background="@color/linee7e7e7" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/card_detail_wechat_tv"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:drawableLeft="@drawable/making_card_wechat_icon"
                        android:drawablePadding="15dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:text=""
                        android:textColor="@color/color000000"
                        android:textSize="@dimen/text_size_15" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/line_05"
                        android:layout_marginLeft="15dp"
                        android:background="@color/linee7e7e7" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/card_detail_company_tv"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:drawableLeft="@drawable/making_card_company_icon"
                        android:drawablePadding="15dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:text=""
                        android:textColor="@color/color000000"
                        android:textSize="@dimen/text_size_15" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/line_05"
                        android:layout_marginLeft="15dp"
                        android:background="@color/linee7e7e7" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/card_detail_city_tv"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:drawableLeft="@drawable/making_card_city_icon"
                        android:drawablePadding="15dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:text=""
                        android:textColor="@color/color000000"
                        android:textSize="@dimen/text_size_15" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/line_05"
                        android:layout_marginLeft="15dp"
                        android:background="@color/linee7e7e7" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/card_detail_addr_tv"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:drawableLeft="@drawable/making_card_addr_icon"
                        android:drawablePadding="15dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:text=""
                        android:textColor="@color/color000000"
                        android:textSize="@dimen/text_size_15" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/line_05"
                        android:layout_marginLeft="15dp"
                        android:background="@color/linee7e7e7" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="20dp"
                    android:paddingBottom="12dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:src="@drawable/making_card_jj_icon" />

                    <com.huimaibao.app.view.ExpandableTextView
                        android:id="@+id/card_detail_introduce_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        app:animDuration="200"
                        app:collapseExpandGrarity="right"
                        app:collapseExpandTextColor="@color/FF274FF3"
                        app:contentTextColor="@color/color000000"
                        app:contentTextSize="@dimen/text_size_15"
                        app:maxCollapsedLines="3"
                        app:textCollapse="@string/collapse"
                        app:textExpand="@string/expand" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_05"
                    android:layout_marginLeft="15dp"
                    android:background="@color/linee7e7e7" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="12dp"
                        android:src="@drawable/making_card_image_icon" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.youth.xframe.widget.NoScrollGridView
                            android:id="@+id/card_detail_album"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="15dp"
                            android:horizontalSpacing="10dp"
                            android:numColumns="3"
                            android:verticalSpacing="10dp" />
                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10.0dp" />
            </LinearLayout>

        </ScrollView>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/card_details_bottom_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/card_detail_left_ll"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="90dp">

                <CheckBox
                    android:id="@+id/card_detail_collect_cb"
                    android:layout_width="18dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18.5dp"
                    android:layout_marginTop="13dp"
                    android:background="@drawable/checkbox_card_style"
                    android:button="@null" />

                <TextView
                    android:id="@+id/card_detail_collect_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/card_detail_collect_cb"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:text="收藏名片"
                    android:textColor="@color/FF333333"
                    android:textSize="@dimen/text_size_10" />

                <TextView
                    android:id="@+id/card_detail_collect_cb_btn"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:onClick="onAction" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/card_detail_left_ll">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:drawableTop="@drawable/card_details_share_icon"
                    android:drawablePadding="3dp"
                    android:text="分享"
                    android:textColor="@color/FF333333"
                    android:textSize="@dimen/text_size_10" />

                <TextView
                    android:id="@+id/card_detail_share_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/btn_green_r6_bg"
                    android:gravity="center"
                    android:paddingLeft="8dp"
                    android:paddingTop="1dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="1dp"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_8" />

                <TextView
                    android:id="@+id/card_detail_share_btn"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:onClick="onAction" />

            </RelativeLayout>

            <TextView
                android:id="@+id/card_detail_tell_btn"
                android:layout_width="125dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="right"
                android:background="#0bc782"
                android:drawableLeft="@drawable/card_details_phone_icon"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:onClick="onAction"
                android:paddingLeft="15dp"
                android:text="拨打电话"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_15" />
        </RelativeLayout>

        <com.youth.xframe.widget.CircleImageView
            android:id="@+id/card_detail_head"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:onClick="onAction"
            android:src="@drawable/ic_default" />

    </RelativeLayout>
</RelativeLayout>
