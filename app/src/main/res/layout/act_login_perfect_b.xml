<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/stub_title_bar" />


    <com.youth.xframe.widget.CircleImageView
        android:id="@+id/login_perfect_image"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:onClick="onAction"
        android:src="@drawable/login_pic_head_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="上传头像"
        android:textColor="@color/color666666"
        android:textSize="@dimen/text_size_13" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="35dp"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="46dp">

            <TextView
                android:id="@+id/making_card_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="姓名"
                android:textColor="@color/main_color"
                android:textSize="@dimen/text_size_11" />


            <EditText
                android:id="@+id/making_card_name"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_alignParentBottom="true"
                android:background="@color/transparent"
                android:gravity="center_vertical"
                android:maxLength="8"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/FF333333"
                android:textCursorDrawable="@drawable/login_cursor_drawable"
                android:textSize="@dimen/text_size_15" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/making_card_name_iv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_05"
            android:layout_marginLeft="15dp"
            android:background="@color/line_eaeaea" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/making_card_jobs_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="职位"
                android:textColor="@color/main_color"
                android:textSize="@dimen/text_size_11" />


            <EditText
                android:id="@+id/making_card_jobs"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_alignParentBottom="true"
                android:background="@color/transparent"
                android:gravity="center_vertical"
                android:maxLength="20"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:singleLine="true"
                android:textColor="@color/FF333333"
                android:textCursorDrawable="@drawable/login_cursor_drawable"
                android:textSize="@dimen/text_size_15" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/making_card_jobs_iv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_05"
            android:layout_marginLeft="15dp"
            android:background="@color/line_eaeaea" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/making_card_company_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="公司"
                android:textColor="@color/main_color"
                android:textSize="@dimen/text_size_11" />


            <EditText
                android:id="@+id/making_card_company"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_alignParentBottom="true"
                android:background="@color/transparent"
                android:gravity="center_vertical"
                android:maxLength="50"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:singleLine="true"
                android:textColor="@color/FF333333"
                android:textCursorDrawable="@drawable/login_cursor_drawable"
                android:textSize="@dimen/text_size_15" />

        </RelativeLayout>


        <ImageView
            android:id="@+id/making_card_company_iv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_05"
            android:layout_marginLeft="15dp"
            android:background="@color/line_eaeaea" />


        <TextView
            android:id="@+id/login_perfect_save"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="26dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/btn_login_r2_bg"
            android:gravity="center"
            android:onClick="onAction"
            android:text="保存"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16" />

    </LinearLayout>


</LinearLayout>


