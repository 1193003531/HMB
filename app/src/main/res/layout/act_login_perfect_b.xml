<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/stub_title_bar" />


    <com.youth.xframe.widget.CircleImageView
        android:id="@+id/login_perfect_image"
        android:onClick="onAction"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:src="@drawable/login_pic_head_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="上传头像"
        android:textColor="@color/color666666"
        android:textSize="@dimen/text_size_13" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="35dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓名"
                android:textColor="@color/color000000"
                android:textSize="@dimen/text_size_15" />

            <EditText
                android:id="@+id/login_perfect_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:background="@color/transparent"
                android:hint="请输入姓名"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text=""
                android:textColor="@color/color666666"
                android:textColorHint="@color/color999999"
                android:textSize="@dimen/text_size_14" />

            <ImageView
                android:id="@+id/login_perfect_name_del"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:src="@drawable/del_edit_icon"
                android:visibility="invisible" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_05"
            android:background="@color/linee7e7e7" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="公司"
                android:textColor="@color/color000000"
                android:textSize="@dimen/text_size_15" />

            <EditText
                android:id="@+id/login_perfect_company"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:background="@color/transparent"
                android:hint="请输入公司名称"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textColor="@color/color666666"
                android:textColorHint="@color/color999999"
                android:textSize="@dimen/text_size_14" />

            <ImageView
                android:id="@+id/login_perfect_company_del"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:src="@drawable/del_edit_icon"
                android:visibility="invisible" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_05"
            android:background="@color/linee7e7e7" />

        <LinearLayout
            android:id="@+id/login_other_pwd_ll"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="职位"
                android:textColor="@color/color000000"
                android:textSize="@dimen/text_size_15" />

            <EditText
                android:id="@+id/login_perfect_jobs"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:background="@color/transparent"
                android:hint="请输入职位"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text=""
                android:textColor="@color/color666666"
                android:textColorHint="@color/color999999"
                android:textSize="@dimen/text_size_14" />

            <ImageView
                android:id="@+id/login_perfect_jobs_del"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:src="@drawable/del_edit_icon"
                android:visibility="invisible" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_05"
            android:background="@color/linee7e7e7" />

        <TextView
            android:id="@+id/login_perfect_save"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="26dp"
            android:background="@drawable/btn_login_r2_bg"
            android:gravity="center"
            android:onClick="onAction"
            android:text="保存"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16" />

    </LinearLayout>


</LinearLayout>


