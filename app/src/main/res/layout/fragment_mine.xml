<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/FFf6f6f6"
    android:orientation="vertical">

    <com.youth.xframe.widget.XSwipeRefreshView
        android:id="@+id/swipeRefreshView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.youth.xframe.widget.XScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/mine_top_bg_iv"
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:background="@drawable/mine_top_bg"
                            android:gravity="center_vertical"
                            android:scaleType="centerCrop" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:background="@color/FFf6f6f6" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="155dp"
                        android:layout_marginLeft="7.5dp"
                        android:layout_marginTop="85dp"
                        android:layout_marginRight="7.5dp"
                        android:background="@drawable/mine_tab_bg"
                        android:orientation="vertical"
                        android:padding="15dp">

                        <LinearLayout
                            android:id="@+id/mine_basic_ll_btn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="18dp"
                            android:orientation="horizontal">


                            <com.youth.xframe.widget.CircleImageView
                                android:id="@+id/mine_basic_image"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/ic_launcher"
                                app:civ_border_width="0dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="2dp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/mine_basic_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:text=""
                                    android:textColor="@color/FF333333"
                                    android:textSize="@dimen/text_size_18"
                                    android:textStyle="bold" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/mine_basic_fws_iv"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/mine_fws_icon"
                                        android:visibility="visible" />

                                    <ImageView
                                        android:id="@+id/mine_basic_rzyh_iv"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/mine_rzyh_icon"
                                        android:visibility="visible" />

                                    <ImageView
                                        android:id="@+id/mine_basic_vip_iv"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/mine_vip_1_icon"
                                        android:visibility="visible" />

                                    <ImageView
                                        android:id="@+id/mine_basic_shop_iv"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/mine_shop_icon"
                                        android:visibility="visible" />

                                    <ImageView
                                        android:id="@+id/mine_basic_ht_iv"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/mine_ht_1_icon"
                                        android:visibility="visible" />
                                </LinearLayout>


                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/mine_qrcode_btn"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.0"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:drawableLeft="@drawable/mine_qrcode_icon"
                                    android:drawablePadding="10dp"
                                    android:gravity="center_vertical"
                                    android:text="名片二维码"
                                    android:textColor="@color/color666666"
                                    android:textSize="@dimen/text_size_12" />

                            </LinearLayout>


                            <View
                                android:layout_width="@dimen/line_05"
                                android:layout_height="13dp"
                                android:background="#d0d0d0" />

                            <LinearLayout
                                android:id="@+id/mine_card_clip_btn"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.0"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/mine_card_clip_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:drawableLeft="@drawable/mine_card_clip_icon"
                                    android:drawablePadding="10dp"
                                    android:ellipsize="end"
                                    android:gravity="center_vertical"
                                    android:maxLines="1"
                                    android:text="关注0"
                                    android:textColor="@color/color666666"
                                    android:textSize="@dimen/text_size_12" />

                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/mine_basic_perfect_ll"
                        android:layout_width="match_parent"
                        android:layout_height="50.5dp"
                        android:background="@drawable/btn_duf"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1.0"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/paddingLeft"
                                android:text="完善名片后提升曝光率！"
                                android:textColor="@color/FF525252"
                                android:textSize="@dimen/text_size_15" />

                            <TextView
                                android:id="@+id/mine_basic_perfect"
                                android:layout_width="62dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/mine_quwanshan_bg"
                                android:gravity="center_horizontal"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:text="去完善"
                                android:textColor="#f56900"
                                android:textSize="@dimen/text_size_12" />

                            <ImageView
                                android:id="@+id/mine_basic_perfect_del"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:paddingLeft="19dp"
                                android:paddingRight="15dp"
                                android:src="@drawable/mine_del_icon" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/line_05"
                            android:background="@color/line_f2f2f2" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/mine_basic_code_ll"
                        android:layout_width="match_parent"
                        android:layout_height="50.5dp"
                        android:background="@drawable/btn_duf"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:drawableLeft="@drawable/mine_yqm_icon"
                                android:drawablePadding="@dimen/text_image"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/paddingLeft"
                                android:text="@string/mine_basic_code"
                                android:textColor="@color/FF333333"
                                android:textSize="@dimen/text_size_15" />

                            <TextView
                                android:id="@+id/mine_basic_code"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="30dp"
                                android:layout_marginRight="10dp"
                                android:layout_weight="1.0"
                                android:ellipsize="end"
                                android:gravity="right"
                                android:maxLines="1"
                                android:text=""
                                android:textColor="@color/color999999"
                                android:textSize="@dimen/text_size_14" />

                            <TextView
                                android:id="@+id/mine_basic_code_copy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="16dp"
                                android:background="@drawable/mine_yqm_copy_bg"
                                android:gravity="center_vertical"
                                android:paddingLeft="14dp"
                                android:paddingTop="5dp"
                                android:paddingRight="14dp"
                                android:paddingBottom="5dp"
                                android:text="复制"
                                android:textColor="@color/color999999"
                                android:textSize="@dimen/text_size_12" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/line_05"
                            android:layout_marginLeft="15dp"
                            android:background="@color/line_f2f2f2" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/mine_member_center_btn"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"

                        android:background="@drawable/btn_duf"
                        android:clickable="true"
                        android:onClick="onClick"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:drawableLeft="@drawable/mine_member_icon"
                            android:drawablePadding="@dimen/text_image"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/paddingLeft"
                            android:text="@string/mine_member_center"
                            android:textColor="@color/FF333333"
                            android:textSize="@dimen/text_size_15" />

                        <TextView
                            android:id="@+id/mine_member_data_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_weight="1.0"
                            android:ellipsize="end"
                            android:gravity="right"
                            android:maxLines="1"
                            android:paddingRight="15dp"
                            android:text=""
                            android:textColor="@color/color999999"
                            android:textSize="@dimen/text_size_14" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="15dp"
                            android:src="@drawable/mine_right_icon" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/line_05"
                        android:layout_marginLeft="15dp"
                        android:background="@color/line_f2f2f2" />

                    <LinearLayout
                        android:id="@+id/mine_marketing_reward_btn"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/btn_duf"
                        android:clickable="true"

                        android:onClick="onClick"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:drawableLeft="@drawable/mine_yxjl_icon"
                            android:drawablePadding="@dimen/text_image"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/paddingLeft"
                            android:text="@string/mine_marketing_reward"
                            android:textColor="@color/FF333333"
                            android:textSize="@dimen/text_size_15" />

                        <TextView
                            android:id="@+id/mine_marketing_reward_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_weight="1.0"
                            android:ellipsize="end"
                            android:gravity="right"
                            android:maxLines="1"
                            android:paddingRight="15dp"
                            android:text="0.00元"
                            android:textColor="@color/color999999"
                            android:textSize="@dimen/text_size_14" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="15dp"
                            android:src="@drawable/mine_right_icon" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/line_05"
                        android:layout_marginLeft="15dp"
                        android:background="@color/line_f2f2f2" />

                    <LinearLayout
                        android:id="@+id/mine_ggby_btn"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/btn_duf"
                        android:clickable="true"

                        android:onClick="onClick"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:drawableLeft="@drawable/mine_ggy_icon"
                            android:drawablePadding="@dimen/text_image"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/paddingLeft"
                            android:text="@string/mine_ggby"
                            android:textColor="@color/FF333333"
                            android:textSize="@dimen/text_size_15" />

                        <TextView
                            android:id="@+id/mine_basic_motto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_weight="1.0"
                            android:ellipsize="end"
                            android:gravity="right"
                            android:maxLines="1"
                            android:paddingRight="15dp"
                            android:text="--"
                            android:textColor="@color/color999999"
                            android:textSize="@dimen/text_size_14" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="15dp"
                            android:src="@drawable/mine_right_icon" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/line_05"
                        android:layout_marginLeft="15dp"
                        android:background="@color/line_f2f2f2" />

                    <LinearLayout
                        android:id="@+id/mine_wallet_btn"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/btn_duf"
                        android:clickable="true"

                        android:onClick="onClick"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1.0"
                            android:drawableLeft="@drawable/mine_wallet_icon"
                            android:drawablePadding="@dimen/text_image"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/paddingLeft"
                            android:text="@string/mine_wallet"
                            android:textColor="@color/FF333333"
                            android:textSize="@dimen/text_size_15" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="15dp"
                            android:src="@drawable/mine_right_icon" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/line_05"
                        android:layout_marginLeft="15dp"
                        android:background="@color/line_f2f2f2" />

                    <LinearLayout
                        android:id="@+id/mine_invite_friends_btn"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/btn_duf"
                        android:clickable="true"
                        android:onClick="onClick"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1.0"
                            android:drawableLeft="@drawable/mine_invite_friends_icon"
                            android:drawablePadding="@dimen/text_image"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/paddingLeft"
                            android:text="@string/mine_invite_friends"
                            android:textColor="@color/FF333333"
                            android:textSize="@dimen/text_size_15" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="15dp"
                            android:src="@drawable/mine_red_envelope_icon"
                            android:visibility="gone" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="15dp"
                            android:src="@drawable/mine_lyy_icon"
                            android:visibility="gone" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="15dp"
                            android:src="@drawable/mine_right_icon" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/line_05"
                        android:layout_marginLeft="15dp"
                        android:background="@color/line_f2f2f2" />


                    <LinearLayout
                        android:id="@+id/mine_push_around_each_other_btn"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/btn_duf"
                        android:clickable="true"

                        android:onClick="onClick"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1.0"
                            android:drawableLeft="@drawable/mine_zshz_icon"
                            android:drawablePadding="@dimen/text_image"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/paddingLeft"
                            android:text="@string/mine_business_cooperation"
                            android:textColor="@color/FF333333"
                            android:textSize="@dimen/text_size_15" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="15dp"
                            android:src="@drawable/mine_right_icon" />

                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/line_05"
                        android:layout_marginLeft="15dp"
                        android:background="@color/line_f2f2f2" />

                    <LinearLayout
                        android:id="@+id/mine_collection_btn"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/btn_duf"
                        android:clickable="true"

                        android:onClick="onClick"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1.0"
                            android:drawableLeft="@drawable/mine_collection_icon"
                            android:drawablePadding="@dimen/text_image"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/paddingLeft"
                            android:text="@string/mine_collection"
                            android:textColor="@color/FF333333"
                            android:textSize="@dimen/text_size_15" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="15dp"
                            android:src="@drawable/mine_right_icon" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/mine_feedback_btn"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/btn_duf"

                    android:clickable="true"
                    android:onClick="onClick"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:drawableLeft="@drawable/mine_feedback_icon"
                        android:drawableRight="@drawable/mine_right_icon"
                        android:drawablePadding="@dimen/text_image"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/paddingLeft"
                        android:paddingRight="@dimen/paddingRight"
                        android:text="@string/mine_feedback"
                        android:textColor="@color/FF333333"
                        android:textSize="@dimen/text_size_15" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_05"
                    android:layout_marginLeft="15dp"
                    android:background="@color/line_f2f2f2" />

                <LinearLayout
                    android:id="@+id/mine_set_btn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/title_height"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/btn_duf"

                    android:clickable="true"
                    android:onClick="onClick"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:drawableLeft="@drawable/mine_set_icon"
                        android:drawableRight="@drawable/mine_right_icon"
                        android:drawablePadding="@dimen/text_image"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/paddingLeft"
                        android:paddingRight="@dimen/paddingRight"
                        android:text="@string/mine_set"
                        android:textColor="@color/FF333333"
                        android:textSize="@dimen/text_size_15" />

                </LinearLayout>
            </LinearLayout>

        </com.youth.xframe.widget.XScrollView>

    </com.youth.xframe.widget.XSwipeRefreshView>

    <LinearLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/fake_status_bar"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/transparent"
            android:gravity="center_vertical|right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mine_item_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:paddingLeft="16dp"
                android:text="我的"
                android:textColor="@color/FF333333"
                android:textSize="@dimen/text_size_17"
                android:textStyle="bold"
                android:visibility="invisible" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/mine_msg_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:onClick="onAction"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:src="@drawable/mine_msg_icon" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="28dp"
                    android:layout_marginTop="11dp"
                    android:src="@drawable/mine_msg_red_icon"
                    android:visibility="gone" />

            </RelativeLayout>


        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
