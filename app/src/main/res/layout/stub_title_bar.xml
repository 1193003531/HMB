<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/stub_title_bar_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical">


        <LinearLayout
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:clickable="true"
            android:gravity="center_vertical|left"
            android:onClick="onClick"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_title_left"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:src="@drawable/ico_arrow_left" />

            <TextView
                android:id="@+id/tv_title_left"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical|left"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="left"
                android:textColor="@color/color333333"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_title_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:gravity="center_vertical|right"
            android:onClick="onClick"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_title_right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:src="@drawable/wallet_top_right_icon" />

            <TextView
                android:id="@+id/tv_title_right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="right"
                android:textColor="@color/main_color"
                android:textSize="@dimen/text_size_15"
                android:visibility="visible" />
        </LinearLayout>

        <TextView
            android:id="@+id/navication_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="80dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="title"
            android:textColor="@color/color000000"
            android:textSize="@dimen/text_size_17"
            android:textStyle="bold" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/stub_title_bar_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_05"
        android:background="@color/line_d9d9d9" />
</LinearLayout>