<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/FFf6f6f6"
    android:orientation="vertical">


    <include layout="@layout/stub_title_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:drawableTop="@drawable/about_us_title_icon"
                    android:drawablePadding="15dp"
                    android:text="@string/about_us_title"
                    android:textColor="@color/color000000"
                    android:textSize="@dimen/text_size_17" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="48dp"
                    android:layout_marginBottom="30dp"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/line_05"
                        android:background="@color/linee7e7e7" />

                    <LinearLayout
                        android:id="@+id/about_us_item_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="onAction"
                        android:orientation="horizontal">

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:padding="15dp"
                            android:text="我要投稿"
                            android:textColor="@color/color000000"
                            android:textSize="@dimen/text_size_15" />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="15dp"
                            android:text="023-67539176"
                            android:textColor="@color/color555555"
                            android:textSize="@dimen/text_size_15" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/line_05"
                        android:layout_marginLeft="15dp"
                        android:background="@color/linee7e7e7" />

                    <LinearLayout
                        android:id="@+id/about_us_item_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:padding="15dp"
                            android:text="商务合作"
                            android:textColor="@color/color000000"
                            android:textSize="@dimen/text_size_15" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="15dp"
                            android:text="023-67539176"
                            android:textColor="@color/color555555"
                            android:textSize="@dimen/text_size_15" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/line_05"
                        android:layout_marginLeft="15dp"
                        android:background="@color/linee7e7e7" />

                    <LinearLayout
                        android:id="@+id/about_us_item_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="onAction"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:padding="15dp"
                            android:text="市场合作"
                            android:textColor="@color/color000000"
                            android:textSize="@dimen/text_size_15" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="15dp"
                            android:text="023-67539176"
                            android:textColor="@color/color555555"
                            android:textSize="@dimen/text_size_15" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/line_05"
                        android:layout_marginLeft="15dp"
                        android:background="@color/linee7e7e7" />

                    <LinearLayout
                        android:id="@+id/about_us_item_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="onAction"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:padding="15dp"
                            android:text="品牌广告合作"
                            android:textColor="@color/color000000"
                            android:textSize="@dimen/text_size_15" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="15dp"
                            android:text="023-67539176"
                            android:textColor="@color/color555555"
                            android:textSize="@dimen/text_size_15" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/line_05"
                        android:layout_marginLeft="15dp"
                        android:background="@color/linee7e7e7" />

                    <LinearLayout
                        android:id="@+id/about_us_item_5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="onAction"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:padding="15dp"
                            android:text="城市合作"
                            android:textColor="@color/color000000"
                            android:textSize="@dimen/text_size_15" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="15dp"
                            android:text="023-67539176"
                            android:textColor="@color/color555555"
                            android:textSize="@dimen/text_size_15" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/line_05"
                        android:background="@color/linee7e7e7" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="汇脉宝网络科技有限公司版权所有"
                android:textColor="@color/color454545"
                android:textSize="@dimen/text_size_11" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Copyright©2018 HuiMaibao.All Rights Reserved"
                android:textColor="@color/color454545"
                android:textSize="@dimen/text_size_11" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>

