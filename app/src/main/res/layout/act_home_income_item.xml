<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_duf"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dp"
        android:layout_marginLeft="15.0dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/marketing_web_1_icon"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/a_h_i_item_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="1"
                android:textColor="@color/color000000"
                android:textSize="@dimen/text_size_16" />

        </RelativeLayout>



        <com.youth.xframe.widget.CircleImageView
            android:id="@+id/a_h_i_item_head"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/ic_launcher"
            app:civ_border_width="0dp" />

        <TextView
            android:id="@+id/a_h_i_item_name"
            android:layout_width="match_parent"
            android:layout_weight="1.0"
            android:layout_height="wrap_content"
            android:layout_marginTop="12.0dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="大卫"
            android:textColor="@color/color000000"
            android:textSize="@dimen/text_size_15"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/a_h_i_item_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12.0dp"
            android:drawableRight="@drawable/mine_right_icon"
            android:drawablePadding="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="总收入￥100"
            android:textColor="@color/color000000"
            android:textSize="@dimen/text_size_13" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.0dp"
        android:layout_marginTop="10.0dp"
        android:layout_marginLeft="15.0dp"
        android:layout_marginRight="15dp"
        android:background="#f5f5f5" />
</LinearLayout>