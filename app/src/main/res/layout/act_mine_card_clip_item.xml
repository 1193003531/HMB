<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <com.youth.xframe.widget.CircleImageView
            android:id="@+id/mine_card_clip_item_head"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="@dimen/paddingLeft"
            android:src="@drawable/ic_default" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="15dp">

                <TextView
                    android:id="@+id/mine_card_clip_item_name"
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="--"
                    android:textColor="@color/FF333333"
                    android:textSize="@dimen/text_size_14" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/mine_card_clip_item_fws_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/mine_fws_icon"
                        android:visibility="visible" />

                    <ImageView
                        android:id="@+id/mine_card_clip_item_rzyh_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/mine_rzyh_icon"
                        android:visibility="visible" />

                    <ImageView
                        android:id="@+id/mine_card_clip_item_vip_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/mine_vip_1_icon"
                        android:visibility="visible" />

                    <ImageView
                        android:id="@+id/mine_card_clip_item_shop_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/mine_shop_icon"
                        android:visibility="visible" />

                    <ImageView
                        android:id="@+id/mine_card_clip_item_ht_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/mine_ht_1_icon"
                        android:visibility="visible" />
                </LinearLayout>
            </LinearLayout>


            <TextView
                android:id="@+id/mine_card_clip_item_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="--"
                android:textColor="@color/color999999"
                android:textSize="@dimen/text_size_12" />


        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_05"
        android:layout_marginTop="5dp"
        android:background="@color/line_f2f2f2" />
</LinearLayout>