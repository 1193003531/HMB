<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <include layout="@layout/stub_title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/elect_material_lib_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/share_record_yfx"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="互相已分享"
                android:textColor="@color/color040404"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/share_record_wfx"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="对方未分享"
                android:textColor="@color/color666666"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>

        <ImageView
            android:id="@+id/share_record_line"
            android:layout_width="69dp"
            android:layout_height="2dp"
            android:background="@color/FF274FF3"
            android:scaleType="matrix" />
    </LinearLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/share_record_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>

