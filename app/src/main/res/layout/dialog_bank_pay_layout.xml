<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="33dp"
        android:background="@drawable/btn_f6_r5_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/btn_white_r5_top_bg">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="请输入支付密码"
                android:textColor="@color/color000000"
                android:textSize="@dimen/text_size_14" />

            <ImageView
                android:id="@+id/dialog_bank_card_pay_pwd_del"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:src="@drawable/wallet_bank_pay_exit_icon" />
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1.0dp"
            android:background="@color/linee7e7e7" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="15dp"
            android:background="@color/white">

            <com.huimaibao.app.view.PayPsdInputView
                android:id="@+id/dialog_bank_card_pay_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                app:maxCount="6"
                app:psdType="weChat"
                app:rectAngle="4dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/dialog_bank_card_pay_pwd_forgot"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="53dp"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="忘记密码?"
            android:textColor="@color/FF274FF3"
            android:textSize="@dimen/text_size_14" />
    </LinearLayout>


</LinearLayout>