<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="15dp"
    android:paddingTop="8dp"
    android:paddingRight="15dp"
    android:paddingBottom="8dp">


    <CheckBox
        android:id="@+id/collection_item_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/checkbox_style"
        android:button="@color/transparent"
        android:checked="false"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/f_h_w_item_image"
        android:layout_width="110dp"
        android:layout_height="62dp"
        android:layout_marginLeft="15dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_default" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/f_h_w_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="JSMO智能产品个人网页JSMO智能产品个人网页"
            android:textColor="@color/color0a0a0a"
            android:textSize="@dimen/text_size_15" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/f_h_w_item_browse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="转发 2102"
                android:textColor="@color/color666666"
                android:textSize="@dimen/text_size_11" />

            <TextView
                android:id="@+id/f_h_w_item_share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1.0"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="浏览 5214"
                android:textColor="@color/color666666"
                android:textSize="@dimen/text_size_11" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/f_h_w_item_head_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                android:maxLines="1"
                android:text="2018-12-21"
                android:textColor="@color/color666666"
                android:textSize="@dimen/text_size_11" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>