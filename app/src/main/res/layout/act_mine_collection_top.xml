<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sreach_ll_btn"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:onClick="onAction"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingTop="6dp"
    android:paddingRight="15dp"
    android:paddingBottom="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/sreach_hui_r15_bg"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/sreach_icon"
            android:drawablePadding="6dp"
            android:text="快速查找文章"
            android:textColor="#b5b5b5"
            android:textSize="@dimen/text_size_12" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_weight="1.0"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/sreach_hui_r15_bg"
            android:gravity="center_vertical"
            android:hint="快速查找文章"
            android:imeOptions="actionSearch"
            android:textColorHint="@color/color999999"
            android:paddingLeft="40dp"
            android:paddingRight="60dp"
            android:singleLine="true"
            android:textSize="@dimen/text_size_12" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/sreach_icon" />

        <ImageView
            android:id="@+id/et_search_del"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:src="@drawable/del_edit_icon"
            android:visibility="gone" />
    </RelativeLayout>


</LinearLayout>

