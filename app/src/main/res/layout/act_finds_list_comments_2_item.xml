<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="59dp"
   >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:layout_weight="1.0"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.youth.xframe.widget.CircleImageView
                    android:id="@+id/finds_list_comments_item_head"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_launcher"
                    app:civ_border_width="0dp" />

                <TextView
                    android:id="@+id/finds_list_comments_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:ellipsize="end"
                    android:gravity="center_horizontal"
                    android:maxLines="1"
                    android:text="桥东波"
                    android:textColor="@color/color666666"
                    android:textSize="@dimen/text_size_13" />


            </LinearLayout>

            <TextView
                android:id="@+id/finds_list_comments_item_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="40dp"
                android:lineSpacingExtra="5dp"
                android:text="回复我：谢谢夸奖！2019-04-03" />

        </LinearLayout>

        <ImageView
            android:id="@+id/finds_list_comments_item_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:paddingLeft="12dp"
            android:paddingTop="10dp"
            android:paddingRight="12dp"
            android:src="@drawable/finds_comments_copy_icon"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/finds_list_comments_item_cd_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/finds_comments_copydel_icon"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/finds_list_comments_item_cd_ll_c"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1.0" />

            <TextView
                android:id="@+id/finds_list_comments_item_cd_ll_d"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1.0" />

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/finds_list_comments_item_praise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/finds_comments_praise_icon"
        android:drawablePadding="5dp"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingRight="16dp"
        android:paddingBottom="10dp"
        android:text="0"
        android:textColor="@color/color999999"
        android:textSize="@dimen/text_size_12" />

</LinearLayout>

