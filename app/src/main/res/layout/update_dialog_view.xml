<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/app_updata_dialog_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="50dp"
            android:text="发现新版本"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_20"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dialog_app_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="4dp"
            android:text="V1.0.0"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_18" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="75dp"
            android:layout_marginRight="26dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:id="@+id/dialog_app_description"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/transparent"
                android:cursorVisible="false"
                android:enabled="true"
                android:focusable="false"
                android:gravity="top"
                android:lineSpacingExtra="10dp"
                android:text=""
                android:textColor="@color/color666666"
                android:textSize="@dimen/text_size_15" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_05"
            android:background="@color/line_eaeaea" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dialog_app_cancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="残忍拒绝"
                android:textColor="@color/FF333333"
                android:textSize="@dimen/text_size_16"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/dialog_app_line"
                android:layout_width="@dimen/line_05"
                android:layout_height="match_parent"
                android:background="@color/line_eaeaea"
                android:visibility="visible" />

            <TextView
                android:id="@+id/dialog_app_sure"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="立即升级"
                android:textColor="#374ff3"
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>