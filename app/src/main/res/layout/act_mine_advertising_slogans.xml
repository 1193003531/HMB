<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/stub_title_bar" />


    <EditText
        android:id="@+id/advertising_slogans_content"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/ed_white_r5_bg"
        android:gravity="top"
        android:hint="广告标语作为你主页分享的标题，能增加你的点击量哦！"
        android:imeOptions="actionDone"
        android:maxLength="30"
        android:paddingLeft="16dp"
        android:paddingTop="20dp"
        android:paddingRight="16dp"
        android:textColor="@color/FF333333"
        android:textColorHint="@color/colored0d0d0"
        android:textSize="@dimen/text_size_15" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_05"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@color/line_d9d9d9" />

    <TextView
        android:id="@+id/advertising_slogans_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="16dp"
        android:text="还可输入30字"
        android:textColor="@color/colored0d0d0"
        android:textSize="@dimen/text_size_14" />


</LinearLayout>

