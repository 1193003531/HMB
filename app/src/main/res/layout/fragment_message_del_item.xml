<?xml version="1.0" encoding="utf-8"?>
<com.huimaibao.app.view.SlidingDeleteView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/slidingview"
    android:layout_width="match_parent"
    android:layout_height="62dp"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/lay_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <com.youth.xframe.widget.CircleImageView
                    android:id="@+id/list_message_item_image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="@dimen/paddingLeft"
                    android:src="@drawable/msg_xt_icon" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/list_message_item_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="--"
                            android:textColor="@color/color000000"
                            android:textSize="@dimen/text_size_15"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/list_message_item_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="15dp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="2018-12-12"
                            android:textColor="@color/color999999"
                            android:textSize="@dimen/text_size_11" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/list_message_item_ll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/list_message_item_content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:text="------------------------------------------------------------------------------------------------------------------------"
                            android:textColor="@color/color999999"
                            android:textSize="@dimen/text_size_12" />

                        <ImageView
                            android:id="@+id/list_message_item_dian"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:src="@drawable/msg_dian_icon" />
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_05"
                android:layout_marginTop="5dp"
                android:background="@color/line_eaeaea" />
        </LinearLayout>
        <!-- 抽屉部分 -->
        <LinearLayout
            android:id="@+id/lay_sliding"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="@color/e92121"
                android:gravity="center"
                android:text="删除"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>
</com.huimaibao.app.view.SlidingDeleteView>