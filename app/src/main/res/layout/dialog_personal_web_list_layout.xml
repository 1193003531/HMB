<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_p_w_l_set"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:drawableTop="@drawable/home_p_web_dialog_set_icon"
            android:drawablePadding="10dp"
            android:gravity="center_horizontal"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:text="克隆设置"
            android:textColor="@color/color333333"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/dialog_p_w_l_amend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:drawableTop="@drawable/home_p_web_dialog_amend_icon"
            android:drawablePadding="10dp"
            android:gravity="center_horizontal"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:text="修改"
            android:textColor="@color/color333333"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/dialog_p_w_l_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:drawableTop="@drawable/home_p_web_dialog_nol_icon"
            android:drawablePadding="10dp"
            android:gravity="center_horizontal"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:text="设为默认"
            android:textColor="@color/color333333"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/dialog_p_w_l_del"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:drawableTop="@drawable/home_p_web_dialog_del_icon"
            android:drawablePadding="10dp"
            android:gravity="center_horizontal"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:text="删除"
            android:textColor="@color/color333333"
            android:textSize="@dimen/text_size_12" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/line_F4F4F4" />

    <TextView
        android:id="@+id/dialog_p_w_l_cancel"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/color101010"
        android:textSize="16sp" />

</LinearLayout>