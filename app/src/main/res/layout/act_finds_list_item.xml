<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingTop="15dp">

        <com.youth.xframe.widget.CircleImageView
            android:id="@+id/finds_list_item_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher" />

        <!--<com.youth.xframe.widget.CircleImageView-->
        <!--android:id="@+id/finds_list_item_head"-->
        <!--android:layout_width="40dp"-->
        <!--android:layout_height="40dp"-->
        <!--android:scaleType="centerCrop"-->
        <!--android:src="@drawable/ic_launcher" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="center_vertical"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1.0"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/finds_list_item_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center_horizontal"
                        android:maxLines="1"
                        android:text="小脉宝"
                        android:textColor="@color/FF333333"
                        android:textSize="@dimen/text_size_14"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/finds_list_item_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:ellipsize="end"
                        android:gravity="center_horizontal"
                        android:maxLines="1"
                        android:text="3月5日"
                        android:textColor="@color/color999999"
                        android:textSize="@dimen/text_size_11" />
                </LinearLayout>


                <ImageView
                    android:id="@+id/finds_list_item_focus"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="15dp"
                    android:paddingRight="16dp"
                    android:src="@drawable/finds_list_top_focus" />

            </LinearLayout>

            <TextView
                android:id="@+id/finds_list_item_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:lineSpacingExtra="5dp"
                android:paddingLeft="12dp"
                android:paddingRight="14dp"
                android:text=""
                android:textColor="@color/FF333333"
                android:textSize="@dimen/text_size_16" />

            <com.huimaibao.app.view.RatioImageView
                android:id="@+id/finds_list_item_grid_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="16dp"
                android:scaleType="centerCrop"
                android:visibility="gone" />

            <!--<com.huimaibao.app.view.NineGridViewLayout-->
            <!--android:id="@+id/finds_list_item_grid"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginLeft="12dp"-->
            <!--android:layout_marginRight="16dp"-->
            <!--app:spacing="4dp" />-->

            <com.huimaibao.app.view.FriendsCircleImageLayout
                android:id="@+id/finds_list_item_grid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="16dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/finds_list_item_comments_num"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:drawableLeft="@drawable/finds_list_comments_num"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:text="0"
                    android:textColor="@color/color999999"
                    android:textSize="@dimen/text_size_14" />


                <LinearLayout
                    android:id="@+id/finds_list_item_praise_ll"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingRight="15dp">

                    <ImageView
                        android:id="@+id/finds_list_item_praise_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/finds_list_praise" />

                    <TextView
                        android:id="@+id/finds_list_item_praise_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/color999999"
                        android:textSize="@dimen/text_size_14" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/finds_list_item_feedback"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="15dp"
                    android:paddingRight="16dp"
                    android:src="@drawable/finds_list_qbfk" />

                <TextView
                    android:id="@+id/finds_list_item_praise_del"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="15dp"
                    android:paddingRight="16dp"
                    android:text="删除"
                    android:textColor="@color/main_color"
                    android:textSize="@dimen/text_size_13" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_05"
        android:background="@color/line_eaeaea" />

</LinearLayout>

