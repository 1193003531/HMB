    <!--<item name="android:textColor">#828692</item>-->
    <!--<item name="tabSelectedTextColor">#353b4b</item>-->
    <!--</style>-->

    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/line_eaeaea</item>
        <item name="colorControlActivated">@color/main_color</item>
    </style>
</resources>
